---
import GradientBox from "./background/GradientBox.astro";
import Ambience from "./background/Ambience.astro";
import Timer from "./Timer.astro";
---

<section class="min-h-screen w-full x-overflow-hidden">
  <div
    class="flex align-middle justify-between pt-10 lg:pt-32 m-auto w-9/10 md:w-4/5 flex-col-reverse lg:flex-row-reverse"
  >
    <div class="hero-left w-4/5 m-auto justify-center">
      <h3
        class="font-[ProgressExtended-Bold] text-white z-1 text-center pb-3 text-xl lg:text-right"
      >
        HIMTI FESTIVAL 2023
      </h3>
      <h1
        class="font-[ProgressExtended-Bold] text-white text-center text-6xl lg:text-right lg:text-7xl"
      >
        COMPETITION
      </h1>
      <p class="p-1 text-white text-center lg:text-right">
        Annual IT festival event held by HIMTI Binus University
      </p>
      <div class="flex justify-end">
        <Timer
          wClass="w-full sm:w-4/5 md:w-7/10 lg:4/5 xl:w-3/5 flex justify-center lg:justify-end xl:mt-5"
        />
      </div>
      <div class="flex justify-end">
        <a
          href="#"
          class="glass glass-border text-white p-3 px-10 rounded-md m-auto mt-5 inline-block lg:m-0 lg:mt-5"
        >
          Daftar Sekarang
        </a>
      </div>
    </div>
    <div class="hero-right flex-row justify-end">
      <img
        class="w-4/5 m-auto pb-5 sm:w-3/5 md:w-2/5 lg:w-4/5"
        src="assets/hero.png"
        alt="hero image"
      />
    </div>
  </div>
  <div class="absolute w-full h-full top-0 left-0 overflow-x-clip -z-10">
    <GradientBox rotationClass="rotate-[135deg]" xPos="-left-32" />
    <Ambience xPos="left-0" yPos="top-[500px]" />
    <Ambience xPos="right-0" yPos="top-[400px]" />
  </div>
</section>
